#!/bin/bash

# kurbeScript: Start a local Kubernetes cluster and verify it

# Exit immediately if a command fails
set -e

# Function to check if a command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

echo "ğŸ” Checking if Minikube is installed..."
if ! command_exists minikube; then
    echo "âŒ Minikube is not installed. Please install it before running this script."
    echo "Installation guide: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

echo "âœ… Minikube found!"

# Start Minikube
echo "ğŸš€ Starting Minikube..."
minikube start

# Verify the cluster is running
echo "ğŸ” Verifying cluster status..."
kubectl cluster-info

# List available pods in all namespaces
echo "ğŸ“‹ Listing all pods..."
kubectl get pods --all-namespaces

echo "ğŸ¯ Kubernetes cluster is up and running!"
